@model SimpleBlog.ViewModels.ArticleBigBlockShowViewModel
@using SimpleBlog.Infrastructure
@if (Model.ArticlesList.Count() == 6)
{
<section class="vc_row wpb_row vc_row-fluid mkd-section vc_custom_1457363866833 mkd-content-aligment-left" style="">
    <div class="clearfix mkd-full-section-inner">
        <div class="wpb_column vc_column_container vc_col-sm-12">
            <div class="vc_column-inner">
                <div class="wpb_wrapper">
                    <div class="mkd-bnl-holder mkd-pb-one-holder  two_third_one_third" data-base="mkd_block_one" data-number_of_posts="6" data-block_proportion="two_third_one_third" data-category_id="2" data-sort="featured_first" data-title="2/3 + 1/3" data-pattern_style="light" data-featured_thumb_image_size="custom_size" data-featured_thumb_image_width="768" data-featured_thumb_image_height="339" data-featured_display_excerpt="yes" data-featured_excerpt_length="23" data-custom_thumb_image_width="117" data-custom_thumb_image_height="84" data-title_length="25" data-display_pagination="no" data-paged="1" data-max_pages="2">
                        <div class="mkd-bnl-outer">
                            <div class="mkd-bnl-inner">
                                <div class="mkd-post-block-part mkd-pb-one-featured">
                                    <article class="mkd-pt-one-item mkd-post-item">
                                        <section class="mkd-pt-one-image-holder">
                                            <div class="mkd-pt-one-image-inner-holder">
                                                <a itemprop="url" class="mkd-pt-one-slide-link mkd-image-link" href="@Url.Action("ArticleSinglePageShow", "Home", new { ArticleId = Model.ArticlesList.ToList()[0].ArticleId, ArticleTitle = UrlHelpers.GetTitleLink(Model.ArticlesList.ToList()[0].Title)})" target="_self">
                                                    <img src="@Url.ArticleImagePath(Model.ArticlesPhotosList.Where(a => a.ArticleId == Model.ArticlesList.ToList()[0].ArticleId).First().FilePath).ToString()" alt="a" style="height:100%;max-height:283px;width:100%;max-width:768px;" />
                                                </a>
                                            </div>
                                        </section>
                                        <div class="mkd-pt-one-content-holder-outer">
                                            <header class="mkd-pt-one-content-holder">
                                                <div class="mkd-pt-one-title-holder">
                                                    <h3 class="mkd-pt-one-title">
                                                        <a itemprop="url" class="mkd-pt-link" href="@Url.Action("ArticleSinglePageShow", "Home", new { ArticleId = Model.ArticlesList.ToList()[0].ArticleId, ArticleTitle = UrlHelpers.GetTitleLink(Model.ArticlesList.ToList()[0].Title) })" target="_self">
                                                            @if (Model.ArticlesList.ToList()[0].Title.Length > 33)
                                                            {
                                                                string title = Model.ArticlesList.ToList()[0].Title.Substring(0, 33) + "...";
                                                                @title
                                                            }
                                                            else
                                                            {
                                                                @Model.ArticlesList.ToList()[0].Title
                                                            }
                                                        </a>
                                                    </h3>
                                                </div>
                                                <div itemprop="dateCreated" class="mkd-post-info-date entry-date updated">
                                                    <a itemprop="url" href="@Url.Action("IndexByDate", "Home", new {Date = Model.ArticlesList.First().DateOfPublish.ToString("ddMMyyyy"), pageNumber = 1 })">@Model.ArticlesList.First().DateOfPublish.ToString("dd/MM/yyyy HH:mm")</a>
                                                        <meta itemprop="interactionCount" content="UserComments: @Model.ArticlesComments[0]" />
                                                </div>
                                                <div class="mkd-pt-one-excerpt">
                                                    @*<div class="mkd-post-excerpt">@Model.ArticlesList.ToList()[0].Text.ToString()</div>*@
                                                    <div class="mkd-post-excerpt">@Html.Raw(Server.HtmlDecode(Model.ArticlesList.ToList()[0].Text.ToString()))</div>
                                                </div>
                                            </header>
                                            <footer class="mkd-pt-info-section clearfix">
                                                <div class="mkd-pt-info-section-left">
                                                    <div class="mkd-blog-share">
                                                        <div class="mkd-social-share-holder mkd-dropdown">
                                                            <a href="javascript:void(0)" target="_self" class="mkd-social-share-dropdown-opener" style="width:auto!important;">
                                                                <span class="mkd-social-share-title">Udostępnij</span>
                                                            </a>
                                                            <div class="mkd-social-share-dropdown">
                                                                <ul>
                                                                    <li class="mkd-twitter-share">
                                                                        <a class="mkd-share-link" onclick="window.open('https://twitter.com/intent/tweet?text=https://simpleblog/@Url.Action("ArticleSinglePageShow", "Home", new { ArticleId = Model.ArticlesList.ToList()[0].ArticleId, ArticleTitle = UrlHelpers.GetTitleLink(Model.ArticlesList.ToList()[0].Title)})', 'popupwindow', 'scrollbars=yes,width=800,height=400');popUp.focus();return false;">
                                                                            <span class="mkd-social-network-icon social_twitter"></span>
                                                                        </a>
                                                                    </li>
                                                                    <li class="mkd-facebook-share">
                                                                        <a class="mkd-share-link" onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=https://simpleblog/@Url.Action("ArticleSinglePageShow", "Home", new { ArticleId = Model.ArticlesList.ToList()[0].ArticleId, ArticleTitle = UrlHelpers.GetTitleLink(Model.ArticlesList.ToList()[0].Title)})', 'sharer', 'toolbar=0,status=0,width=620,height=280');">
                                                                            <span class="mkd-social-network-icon social_facebook"></span>
                                                                        </a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="mkd-post-info-comments-holder">
                                                        <a class="mkd-post-info-comments" href="@Url.Action("ArticleSinglePageShow", "Home", new { ArticleId = Model.ArticlesList.ToList()[0].ArticleId, ArticleTitle = UrlHelpers.GetTitleLink(Model.ArticlesList.ToList()[0].Title) })#comments" target="_self">Komentarze: @Model.ArticlesComments[0]</a>
                                                    </div>
                                                    <div class="mkd-post-info-count">
                                                        <span class="mkd-post-count-text">Odsłony:</span>
                                                        <span class="mkd-post-count-number">@Model.ArticlesList.ToList()[0].Views</span>
                                                    </div>
                                                </div>
                                                <div class="mkd-pt-info-section-right">
                                                    <a href="@Url.Action("ArticleSinglePageShow", "Home", new { ArticleId = Model.ArticlesList.ToList()[0].ArticleId, ArticleTitle = UrlHelpers.GetTitleLink(Model.ArticlesList.ToList()[0].Title) })" target="_self" class="mkd-btn mkd-btn-medium mkd-btn-transparent mkd-btn-icon"> 
                                                        <span class="mkd-btn-text">Więcej</span> 
                                                        @*<i class="mkd-icon-ion-icon ion-log-in mkd-btn-icon-element"></i>*@
                                                    </a>
                                                </div>
                                            </footer>
                                        </div>
                                    </article>
                                </div>
                                <div class="mkd-post-block-part mkd-pb-one-non-featured" style="height:100%!important">
                                    @for (int i = 1; i < 6; i++)
                                    {
                                        <article class="mkd-pt-seven-item mkd-post-item">
                                            <div class="mkd-pt-seven-item-inner clearfix" style="height:98px;">
                                                <header class="mkd-pt-seven-image-holder" style="width: 117px">
                                                    <a itemprop="url" class="mkd-pt-seven-link mkd-image-link" href="@Url.Action("ArticleSinglePageShow", "Home", new { ArticleId = Model.ArticlesList.ToList()[i].ArticleId, ArticleTitle = UrlHelpers.GetTitleLink(Model.ArticlesList.ToList()[i].Title) })" target="_self">
                                                        <img src="@Url.ArticleImagePath(Model.ArticlesPhotosList.Where(a => a.ArticleId == Model.ArticlesList.ToList()[i].ArticleId).First().FilePath).ToString()" alt="a" width="117" height="84" />
                                                    </a>
                                                </header>
                                                <div class="mkd-pt-seven-content-holder">
                                                    <header class="mkd-pt-seven-title-holder" style="height:2.666em; overflow: hidden;">
                                                        <h6 class="mkd-pt-seven-title">
                                                            <a itemprop="url" class="mkd-pt-link" style="overflow:hidden; text-overflow:ellipsis; height:34px;" href="@Url.Action("ArticleSinglePageShow", "Home", new { ArticleId = Model.ArticlesList.ToList()[i].ArticleId, ArticleTitle = UrlHelpers.GetTitleLink(Model.ArticlesList.ToList()[i].Title) })" target="_self">@Model.ArticlesList.ToList()[i].Title.ToString()</a>
                                                        </h6>
                                                    </header>
                                                    <div itemprop="dateCreated" class="mkd-post-info-date entry-date updated">
                                                        <a itemprop="url" href="@Url.Action("IndexByDate", "Home", new { pageNumber = 1, Date = Model.ArticlesList.ToList()[i].DateOfPublish.ToString("ddMMyyyy") })">@Convert.ToDateTime(Model.ArticlesList.ToList()[i].DateOfPublish).ToString("dd/MM/yyyy HH:mm")</a>
                                                        <meta itemprop="interactionCount" content="UserComments: 0" />
                                                    </div>
                                                </div>
                                            </div>
                                        </article>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
}
